// single massage sand in contracter list card  copy also  =================================================================================

add_action('admin_post_send_single_message', 'handle_send_single_message');
add_action('admin_post_nopriv_send_single_message', 'handle_send_single_message');

function handle_send_single_message() {
    $contractor_email = sanitize_email($_POST['email']);
    $contractor_name = sanitize_text_field($_POST['contractor_name']);
    $contractor_url = esc_url_raw($_POST['contractor_url']);
    $sender_name = sanitize_text_field($_POST['sender_name']);
    $sender_email = sanitize_email($_POST['sender_email']);
    $message = sanitize_textarea_field($_POST['message']);

    $subject = 'Message from Website Visitor';
    $body = "You have received a new message from your contractor profile.\n\n";
    $body .= "Visitor Name: $sender_name\n";
    $body .= "Visitor Email: $sender_email\n\n";
    $body .= "Contractor Name: $contractor_name\n";
    $body .= "Profile Link: $contractor_url\n\n";
    $body .= "Message:\n$message";

    $headers = ['Content-Type: text/plain; charset=UTF-8'];

    // Send to contractor
    wp_mail($contractor_email, $subject, $body, $headers);

    // Send copy to admin
    $admin_copy = $body . "\n\nContractor Email: $contractor_email";
    wp_mail('info.indianrugstore@gmail.com', $subject, $admin_copy, $headers);

    wp_redirect(wp_get_referer());
    exit;
}

// profile email massage copy also ====================================================================================




// Handle form submission
add_action('admin_post_nopriv_send_custom_message', 'send_custom_message');
add_action('admin_post_send_custom_message', 'send_custom_message');

function send_custom_message() {
    $visitor_name = sanitize_text_field($_POST['visitor_name']);
    $visitor_email = sanitize_email($_POST['visitor_email']);
    $message = sanitize_textarea_field($_POST['message']);
    $contractor_email = sanitize_email($_POST['contractor_email']);
    $contractor_name = sanitize_text_field($_POST['contractor_name']);
    $profile_link = esc_url_raw($_POST['profile_link']);

    $subject = "Message from $visitor_name";
    $headers = [
        'Content-Type: text/html; charset=UTF-8',
        "Reply-To: $visitor_name <$visitor_email>"
    ];

    // Message to Contractor
    $body_contractor = "<strong>You have received a new message from your Leinteriore profile.</strong><br><br>";
    $body_contractor .= "<strong>Visitor Name:</strong> $visitor_name<br>";
    $body_contractor .= "<strong>Visitor Email:</strong> $visitor_email<br><br>";
    $body_contractor .= "<strong>Contractor Name:</strong> $contractor_name<br>";
    $body_contractor .= "<strong>Profile Link:</strong> <a href='$profile_link'>$profile_link</a><br><br>";
    $body_contractor .= "<strong>Message:</strong><br>" . nl2br($message);

    // Message to Admin (includes contractor email)
    $body_admin = $body_contractor . "<br><br><strong>Contractor Email:</strong> $contractor_email";

    // Send to Contractor
    wp_mail($contractor_email, $subject, $body_contractor, $headers);

    // Send to Admin
    wp_mail('info.indianrugstore@gmail.com', $subject, $body_admin, $headers);

    wp_redirect($_SERVER['HTTP_REFERER']);
    exit;
}


// Shortcode to display message button and popup form
function message_popup_button_shortcode() {
    ob_start(); ?>
    <button onclick="openMessagePopup()" style="padding: 10px 20px; background: black; color: white; border: none; cursor: pointer;">Send Message</button>

    <div id="messageModal" style="display:none; position:fixed; top:45%; left:50%; transform:translateX(-50%); background:#fff; padding:20px; box-shadow:0 0 10px #000; z-index:1000;">
        <form method="POST" action="<?php echo esc_url(admin_url('admin-post.php')); ?>">
            <input type="hidden" name="action" value="send_custom_message">
            <input type="hidden" id="contractor_email" name="contractor_email" value="">
            <input type="hidden" id="contractor_name" name="contractor_name" value="">
            <input type="hidden" id="profile_link" name="profile_link" value="<?php echo esc_url(get_permalink()); ?>">

            <input type="text" name="visitor_name" placeholder="Your Name" required style="width:100%; padding:10px; margin-bottom:10px;"><br>
            <input type="email" name="visitor_email" placeholder="Your Email" required style="width:100%; padding:10px; margin-bottom:10px;"><br>
            <textarea name="message" placeholder="Message" required style="width:100%; padding:10px; margin-bottom:10px;" rows="5"></textarea><br>

            <button type="submit" style="background:black; color:white; padding:10px 20px; border:none;">Send Message</button>
            <button type="button" onclick="closeMessagePopup()" style="margin-left:10px; padding:10px 20px;">Cancel</button>
        </form>
    </div>

    <script>
        function openMessagePopup() {
            const email = document.getElementById('current_email')?.textContent.trim() || '';
            const name = document.getElementById('contractor_name')?.textContent.trim() || '';

            document.getElementById('contractor_email').value = email;
            document.getElementById('contractor_name').value = name;
            document.getElementById('messageModal').style.display = 'block';
        }

        function closeMessagePopup() {
            document.getElementById('messageModal').style.display = 'none';
        }
    </script>
    <?php
    return ob_get_clean();
}
add_shortcode('message_popup_button', 'message_popup_button_shortcode');


// reviews =======================================================================================================================

function business_reviews_shortcode() {
    $json_path = plugin_dir_path(__FILE__) . 'reviews_with_text.json';
    if (!file_exists($json_path)) {
        return '<p>No reviews file found.</p>';
    }

    $json_data = json_decode(file_get_contents($json_path), true);

    // Get current post slug
    global $post;
    if (!$post) return '<p>Unable to detect current page.</p>';
    $current_slug = $post->post_name;

    // Function to slugify business names
    function slugify($text) {
        $text = strtolower(trim($text));
        $text = preg_replace('/[^a-z0-9]+/', '-', $text);
        return trim($text, '-');
    }

    // Find the matching business by slug
    $matched_business = null;
    foreach ($json_data as $item) {
        if (slugify($item['business']) === $current_slug) {
            $matched_business = $item;
            break;
        }
    }

    if (!$matched_business) {
        return '<p>No reviews found for this business.</p>';
    }

    // Build HTML output
    ob_start();
    ?>
    <div class="business-reviews">
        <!-- <label for="review-toggle">Show Reviews:</label>
        <select id="review-toggle" style="border-radius:4px;" onchange="toggleReviews(this)">
            <option value="hide">Hide</option>
            <option value="show">Show</option>
        </select> -->

        <ul id="reviews-list" style="display:block; margin-top:10px;">
            <?php foreach ($matched_business['reviews'] as $review) : ?>
                <li>
                    <strong style="display:block; color:black; width:100%;"><?php echo esc_html($review['reviewer']); ?>:</strong>
                    <?php echo esc_html($review['review']); ?> 
                </li>
            <?php endforeach; ?>
        </ul>
    </div>

    <!-- <script>
        function toggleReviews(select) {
            const list = document.getElementById('reviews-list');
            list.style.display = select.value === 'show' ? 'block' : 'none';
        }
    </script> -->
    <?php
    return ob_get_clean();
}

add_shortcode('business_reviews', 'business_reviews_shortcode');




// review total ----------------------------------------------------------------------------------------------

function business_review_count_shortcode() {
    $json_path = plugin_dir_path(__FILE__) . 'reviews_with_text.json';
    if (!file_exists($json_path)) {
        return '<p>No reviews file found.</p>';
    }

    $json_data = json_decode(file_get_contents($json_path), true);

    ob_start();
    ?>
    <div id="review-count-wrapper" style="display: flex; align-items: center; gap: 6px; font-size: 14px; color: #333;">
        <span id="rating-score-stars"></span>
        <span id="rating-review-count">Loading reviews...</span>
    </div>
    <script>
        const businessReviews = <?php echo json_encode($json_data); ?>;

        function normalizeText(text) {
            return text.toLowerCase().replace(/[^a-z0-9]+/g, '');
        }

        document.addEventListener('DOMContentLoaded', function () {
            const h1 = document.querySelector('.contractor-info h1');
            const ratingStarsSpan = document.getElementById('rating-score-stars');
            const reviewCountSpan = document.getElementById('rating-review-count');

            if (!h1) {
                ratingStarsSpan.innerHTML = '';
                reviewCountSpan.innerText = '0 Reviews';
                return;
            }

            const h1Text = h1.textContent.trim();
            const h1Normalized = normalizeText(h1Text);
            let reviewCount = 0;

            for (const item of businessReviews) {
                const businessNormalized = normalizeText(item.business || '');
                if (h1Normalized === businessNormalized) {
                    reviewCount = (item.reviews || []).filter(r => r.reviewer && r.reviewer.toLowerCase() !== 'nan').length;
                    break;
                }
            }

            let score = '';
            let stars = '';
            if (reviewCount >= 10) {
                score = '5';
                stars = '‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê';
            } else if (reviewCount >= 5) {
                score = '3';
                stars = '‚≠ê‚≠ê‚≠ê';
            } else if (reviewCount > 0) {
                score = '1';
                stars = '‚≠ê';
            }

            if (score && stars) {
                ratingStarsSpan.innerHTML = `<strong>${score}</strong> ${stars}`;
            } else {
                ratingStarsSpan.innerHTML = '';
            }

            reviewCountSpan.textContent = `${reviewCount} ${reviewCount === 1 ? 'Review' : 'Reviews'}`;
        });
    </script>
    <?php
    return ob_get_clean();
}
add_shortcode('business_review_count', 'business_review_count_shortcode');


